/*
Alcance:
    Fuentes estáticas.
    Colecciones.
    Hechos: listado, filtrado y búsqueda.
    Visualizadores y Contribuyentes de hechos.
    Solicitudes de eliminación.
*/

@startuml
'https://plantuml.com/class-diagram

Multimedia --> Formato

Hecho --> Categoria
Hecho --> " * " Etiqueta
Hecho --> Ubicacion
Hecho --> Origen
Hecho --> Multimedia

Zona --> " * " Ubicacion

Origen --> TipoOrigen

FiltroZonaStrategy --> Zona
FiltroCategoriaStrategy --> Categoria

FiltroTituloStrategy ..> Hecho
FiltroCategoriaStrategy ..> Hecho
FiltroFechaStrategy ..> Hecho
FiltroZonaStrategy ..> Hecho

Coleccion --> " * " FiltroStrategy
Coleccion --> " * " FuenteDeDatos

Estado --> TipoEstado

Solicitud --> Hecho
Solicitud --> Estado

FuenteDeDatos ..> FiltroStrategy

FuenteEstaticaCsv --> CsvReaderAdapter

class Categoria {
    - nombre: String
}

class Etiqueta {
    - nombre: String
}

class Ubicacion {
    - latitud: Integer
    - longitud: Integer
}

class Origen {
    - tipo: TipoOrigen
    - nombreAutor: String
    - apellidoAutor: String
    - edadAutor: Integer
}

enum TipoOrigen {
    MANUAL
    DATASET
    CONTRIBUYENTE
}

enum Formato {
    TEXTO
    IMAGEN
    AUDIO
    VIDEO
}

class Multimedia {
    - nombre: String
    - ruta: String
    - formato: Formato
}

class Hecho {
    - titulo: String
    - descripcion: String
    - categoria: Categoria
    - etiquetas: Set<Etiqueta>
    - ubicacion: Ubicacion
    - fechaAcontecimiento: LocalDate
    - fechaCarga: LocalDate
    - origen: Origen
    - multimedia: List<Multimedia>
    - eliminado: Boolean
    + agregar(etiqueta: Etiqueta): Boolean
}

class Zona {
    - nombre: String
    - perimetro: Set<Ubicacion>
    + pertenece(ubicacion: Ubicacion): Boolean
}

interface FuenteDeDatos {
    + obtenerHechos(criterios: Set<FiltroStrategy>): Set<Hechos>
}

class FuenteEstaticaCsv implements FuenteDeDatos {
    - csvReader: csvReaderAdapter
    - rutaArchivo: String
    - separadorColumna: String
    + obtenerHechos(criterios: Set<FiltroStrategy>): Set<Hecho>
}

interface FiltroStrategy {
    + cumpleFiltro(hecho: Hecho): Boolean
}

class FiltroTituloStrategy implements FiltroStrategy {
    - titulo: String
    + cumpleFiltro(hecho: Hecho): Boolean
}

class FiltroCategoriaStrategy implements FiltroStrategy {
    - categoria: Categoria
    + cumpleFiltro(hecho: Hecho): Boolean
}

class FiltroZonaStrategy implements FiltroStrategy {
    - zona: Zona
    + cumpleFiltro(hecho: Hecho): Boolean
}

class FiltroFechaStrategy implements FiltroStrategy {
    - fechaInicio: LocalDate
    - fechaFin: LocalDate
    + cumpleFiltro(hecho: Hecho): Boolean
}

class Coleccion {
    - titulo: String
    - descripcion: String
    - criterios: Set<FiltroStrategy>
    - fuentes: Set<FuenteDeDatos>
    + obtenerHechos(criterios: Set<FiltroStrategy>): Set<Hecho>
}

enum TipoEstado {
    PENDIENTE
    ACEPTADA
    RECHAZADA
}

class Estado {
   - estado: TipoEstado
   - fechaActualizacion: LocalDateTime
   - supervisor: String
}

class Solicitud {
   - titulo: String
   - texto: String
   - hecho: Hecho
   - fechaCreacion: LocalDateTime
   - responsable: String
   - estadoActual: Estado
   - historial: Set<Estado>
   + estaFundado(): Boolean
}

class LectorCsv implements CsvReaderAdapter {
    + readCsv(path: String, separator: String): List<Object>
}

interface CsvReaderAdapter {
    + readCsv(path: String, separator: String): List<Object>
}

@enduml